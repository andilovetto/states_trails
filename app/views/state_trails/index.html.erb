<h1><%= @state.name %> Trails</h1>
<%= link_to "Sort Trails", "/states/#{@state.id}/trails?sort=asc" %>
<%= form_with url: "/states/#{@state.id}/trails", method: :get, local: true do |form| %>
  <%= form.label :mileage, "Filter Trails By Mileage" %>
  <%= form.text_field :mileage %>
  <%= form.submit "Apply" %>
<% end %>
<% @trails.each do |trail| %>
  <%= link_to "Edit #{trail.name}", "/trails/#{trail.id}/edit" %>
  <%= link_to "Delete #{trail.name}", "/trails/#{trail.id}", method: :delete %>
  <p>Name: <%= trail.name %></p>
  <p>Seasonal Closure: <%= trail.seasonal_closures %></p>
  <p>Mileage: <%= trail.mileage %></p>
  <p>Elevation: <%= trail.elevation %></p>
  <p>State ID: <%= trail.state_id %></p>

<% end %>